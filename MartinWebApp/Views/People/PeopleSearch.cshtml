@model MartinWebApp.Models.PeopleViewModel
@{
    ViewData["Title"] = "PeopleIndex";
}
<h1>People Index</h1>
<h2>Search People</h2>
<form asp-controller="People" asp-action="PeopleSearch" method="post">
    <label>Name:</label>
    <input type="text" name="name" />
    <label>Tele:</label>
    <input type="text" name="phonenumber" />
    <label>City:</label>
    <input type="text" name="city" />

    <input type="submit" value="Search" />
</form>

<h2>Add Person</h2>
<form asp-controller="People" asp-action="PeopleIndex" method="post">
    <label>Name:</label>
    <input type="text" name="name" />
    <label>Tele:</label>
    <input type="text" name="phonenumber" />
    <label>City:</label>
    <input type="text" name="city" />

    <input type="submit" value="Add" />
</form>
@if (ViewBag.ErrorMess != null)
{
<p>@ViewBag.ErrorMess</p>

}
<h2>Search Results</h2>
<table>
    @foreach (var p in MartinWebApp.Models.PeopleViewModel.peopleResult)
    {
    <tr>
        <td>Name: @p.Name</td>
        <td>Tele: @p.PhoneNumber</td>
        <td>City: @p.City</td>
    </tr>

    }
</table>