@using MartinWebApp.Data.ViewModels;
@model RegisterVM;
@{
    ViewData["Title"] = "Register account";
}

<div>
    <div>

        <h4>Login to your account</h4>
        <form asp-action="Register" method="post">
            <table>
                <tr>
                    <td>First name</td>
                    <td><input asp-for="FirstName" /></td>
                    <td><span asp-validation-for="FirstName"></span></td>

                </tr>
                <tr>
                    <td>Last name</td>
                    <td><input asp-for="LastName" /></td>
                    <td><span asp-validation-for="LastName"></span></td>

                </tr>
                <tr>
                    <td>Email adress</td>
                    <td><input asp-for="EmailAddress" /></td>
                    <td><span asp-validation-for="EmailAddress"></span></td>

                </tr>
                <tr>
                    <td>Password</td>
                    <td><input asp-for="Password" /></td>
                    <td><span asp-validation-for="Password"></span></td>

                </tr>
                <tr>
                    <td>Confirm Password</td>
                    <td><input asp-for="ConfirmPassword" /></td>
                    <td><span asp-validation-for="ConfirmPassword"></span></td>

                </tr>
                <tr>
                    <td>Birthday</td>
                    <td><input asp-for="Birthday" /></td>
                    <td><span asp-validation-for="Birthday"></span></td>

                </tr>
                <tr>
                    <td><input type="submit" value="Sign up" /></td>
                    <td>
                        @if (TempData["Error"] != null)
                        {
                            <span>Unforunatly - @TempData["Error"]</span>
                        }
                    </td>
                </tr>
            </table>
        </form>

    </div>
</div>
